@model StudentEnrollment.Models.Student

<h2>Add a New Student</h2>

<form method="post" asp-action="Update">
    <div>
        <label asp-for="FirstName">First Name: </label>
        <input asp-for="FirstName" value="@Model.FirstName" type="text" minlength="2" maxlength="20" />
    </div>

    <div>
        <label asp-for="LastName">Last Name: </label>
        <input asp-for="LastName" value="@Model.LastName" type="text" minlength="2" maxlength="20" />
    </div>

    <div>
        <label asp-for="GradeYear">Grade: </label>
        <input asp-for="GradeYear" value="@Model.GradeYear" asp-items="Html.GetEnumSelectList<GradeYear>()" />
    </div>

    <div>
        <label asp-for="GPA">Overall GPA: </label>
        <input asp-for="GPA" value="@Model.GPA" type="number" step="0.01" min="0.00" max="4.00" />
    </div>

    <div>
        <label asp-for="Class">Class: </label>
        <input asp-for="Class" value="@Model.Class" asp-items="Html.GetEnumSelectList<ClassName>()" />
    </div>

    <div>
        <input tpye="submit" value="Update" />
    </div>
</form>