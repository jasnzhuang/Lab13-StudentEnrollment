@using StudentEnrollment.Models
@model StudentEnrollment.Models.Student

<h2>Add a New Student</h2>

<form method="post" asp-action="Create">
    <div>
        <label asp-for="FirstName">First Name: </label>
        <input asp-for="FirstName" type="text" minlength="2" maxlength="20" />
    </div>

    <div>
        <label asp-for="LastName">Last Name: </label>
        <input asp-for="LastName" type="text" minlength="2" maxlength="20" />
    </div>

    <div>
        <label asp-for="GPA">Overall GPA: </label>
        <input asp-for="GPA" type="number" step="0.01" min="0.00" max="4.00" value="4.00" />
    </div>

    <div>
        <label asp-for="GradeYear">Grade: </label>
        <select asp-for="GradeYear" asp-items="Html.GetEnumSelectList<GradeYear>()"></select>
    </div>

    <div>
        <label asp-for="Class">Class: </label>
        <select asp-for="Class" asp-items="Html.GetEnumSelectList<ClassName>()"></select>
    </div>

    <div>
        <input type="submit" value="Create" />
    </div>
</form>