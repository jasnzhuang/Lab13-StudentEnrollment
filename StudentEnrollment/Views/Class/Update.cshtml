@using StudentEnrollment.Models
@model StudentEnrollment.Models.Class


<h2>Edit</h2>

<!-- Print the ClassName above the form.We shouldn't be able to edit the ClassName, as that is now a "new" class entirely,
     so Admins should instead have to delete the Class and create a new one. -->
<h3>@Model.ClassName</h3>

<form method="post" asp-action="Update">

    <div>
        <label asp-for="StartDate">Start Date: </label>
        <input asp-for="StartDate" type="date" />
    </div>

    <div>
        <label asp-for="EndDate">End Date: </label>
        <input asp-for="EndDate" type="date" />
    </div>

    <div>
        <label asp-for="InstructorName">Instructor: </label>
        <input asp-for="InstructorName" type="text" maxlength="40" />
    </div>

    <div>
        <input type="submit" value="Save Changes" />
    </div>

</form>